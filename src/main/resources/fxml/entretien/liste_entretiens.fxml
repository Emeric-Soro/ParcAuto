<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.ci.miage.MiAuto.controllers.EntretienController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Gestion des Entretiens">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Filtrer par:" />
                        <ComboBox fx:id="comboFiltre" prefWidth="150.0" promptText="Statut" />
                        <TextField fx:id="txtRecherche" promptText="Rechercher par motif ou lieu..." HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnRechercher" mnemonicParsing="false" onAction="#handleRechercherButton" text="Rechercher" />
                        <Button fx:id="btnRafraichir" mnemonicParsing="false" onAction="#handleRafraichirButton" text="Rafraîchir" />
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableEntretiens" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colVehicule" prefWidth="150.0" text="Véhicule" />
                <TableColumn fx:id="colMotif" prefWidth="120.0" text="Motif" />
                <TableColumn fx:id="colDateEntree" prefWidth="100.0" text="Date d'entrée" />
                <TableColumn fx:id="colDateSortie" prefWidth="100.0" text="Date de sortie" />
                <TableColumn fx:id="colCout" prefWidth="80.0" text="Coût" />
                <TableColumn fx:id="colLieu" prefWidth="120.0" text="Lieu" />
                <TableColumn fx:id="colStatut" prefWidth="80.0" text="Statut" />
            </columns>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnAjouter" mnemonicParsing="false" onAction="#handleAjouterButton" text="Ajouter" />
                <Button fx:id="btnModifier" disable="true" mnemonicParsing="false" onAction="#handleModifierButton" text="Modifier" />
                <Button fx:id="btnTerminer" disable="true" mnemonicParsing="false" onAction="#handleTerminerButton" text="Terminer" />
                <Button fx:id="btnSupprimer" disable="true" mnemonicParsing="false" onAction="#handleSupprimerButton" text="Supprimer" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>