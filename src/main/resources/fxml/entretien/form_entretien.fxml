        <Label text="Formulaire Entretien Véhicule" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Informations de base">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Véhicule *:" />
                        <Label text="Date d'entrée *:" GridPane.rowIndex="1" />
                        <Label text="Date de sortie:" GridPane.rowIndex="2" />
                        <ComboBox fx:id="comboVehicule" prefWidth="150.0" GridPane.columnIndex="1" />
                        <DatePicker fx:id="dateEntree" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <DatePicker fx:id="dateSortie" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
                <Separator prefWidth="200.0" />
                <Label text="Détails de l'entretien">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Motif *:" />
                        <Label text="Coût:" GridPane.rowIndex="1" />
                        <Label text="Lieu d'entretien:" GridPane.rowIndex="2" />
                        <Label text="Observations:" GridPane.rowIndex="3" />
                        <TextField fx:id="txtMotif" GridPane.columnIndex="1" />
                        <TextField fx:id="txtCout" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <TextField fx:id="txtLieu" GridPane.columnIndex="1" GridPane.rowIndex="2" />
