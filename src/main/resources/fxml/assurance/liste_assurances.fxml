<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.ci.miage.MiAuto.controllers.AssuranceListController">
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Gestion des Assurances">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Rechercher par:" />
                        <ComboBox fx:id="comboTypeCritere" prefWidth="150.0" promptText="Critère" />
                        <TextField fx:id="txtRecherche" promptText="Valeur recherchée..." HBox.hgrow="ALWAYS" />
                        <DatePicker fx:id="datePicker" promptText="Date" visible="false" />
                        <Button fx:id="btnRechercher" mnemonicParsing="false" onAction="#handleRechercherButton" text="Rechercher" />
                        <Button fx:id="btnRafraichir" mnemonicParsing="false" onAction="#handleRafraichirButton" text="Rafraîchir" />
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tableAssurances" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colNumCarte" prefWidth="100.0" text="N° Carte" />
                <TableColumn fx:id="colAgence" prefWidth="150.0" text="Agence" />
                <TableColumn fx:id="colDateDebut" prefWidth="120.0" text="Date de début" />
                <TableColumn fx:id="colDateFin" prefWidth="120.0" text="Date d'expiration" />
                <TableColumn fx:id="colCout" prefWidth="100.0" text="Coût" />
                <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
                <TableColumn fx:id="colVehicule" prefWidth="180.0" text="Véhicule" />
            </columns>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnAjouter" mnemonicParsing="false" onAction="#handleAjouterButton" text="Ajouter" />
                <Button fx:id="btnModifier" disable="true" mnemonicParsing="false" onAction="#handleModifierButton" text="Modifier" />
                <Button fx:id="btnSupprimer" disable="true" mnemonicParsing="false" onAction="#handleSupprimerButton" text="Supprimer" />
                <Button fx:id="btnAssignerVehicule" disable="true" mnemonicParsing="false" onAction="#handleAssignerVehiculeButton" text="Assigner à un véhicule" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>